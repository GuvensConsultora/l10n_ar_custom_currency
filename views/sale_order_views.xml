<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Por qué: Agregar campo de tasa manual en formulario de ventas
        Patrón: View Inheritance - extender vista nativa sin modificarla
        Tip: Usar invisible en lugar de attrs deprecated en v17
    -->
    <record id="view_order_form_manual_rate" model="ir.ui.view">
        <field name="name">sale.order.form.manual.rate</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!--
                Por qué: Posicionar después del campo currency_id
                Tip: El campo se muestra solo si currency_id != company_currency_id
            -->
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="show_manual_rate" invisible="1"/>
                <label for="manual_currency_rate" string="Tasa Manual" invisible="not show_manual_rate"/>
                <field
                    name="manual_currency_rate"
                    invisible="not show_manual_rate"
                    class="oe_inline"
                    placeholder="Ingrese tasa manual (ej: 1000.00)"/>
                <label for="print_in_company_currency" string="Imprimir en Moneda Compañía" invisible="not show_manual_rate"/>
                <field
                    name="print_in_company_currency"
                    invisible="not show_manual_rate"
                    widget="boolean_toggle"/>
            </xpath>

            <!--
                Por qué: Mostrar montos en moneda compañía en notebook
                Tip: Solo visible si print_in_company_currency está activado
            -->
            <xpath expr="//notebook" position="inside">
                <page string="Montos en Moneda Compañía" invisible="not print_in_company_currency">
                    <group>
                        <group>
                            <field name="company_currency_id" invisible="1"/>
                            <field name="amount_untaxed_company" widget="monetary"/>
                            <field name="amount_tax_company" widget="monetary"/>
                            <field name="amount_total_company" widget="monetary"/>
                        </group>
                        <group>
                            <label string="Tasa aplicada:" class="o_form_label fw-bold"/>
                            <div>
                                <field name="manual_currency_rate" readonly="1" class="oe_inline"/>
                                <span invisible="manual_currency_rate"> (Tasa del sistema)</span>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
